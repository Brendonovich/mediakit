{
  "name": "@solid-mediakit/auth",
  "description": "A set of utilities to use with your Solid apps.",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc -p . && rollup -c && node scripts/postbuild",
    "clean": "pnpm clean:dist && rm -rf ./node_modules .turbo .solid",
    "lint": "eslint . --fix --ext .ts,.tsx,.js,.jsx",
    "clean:dist": "rm -rf dist client.* index.* types.* utils.* vite.*",
    "typecheck": "tsc --noEmit"
  },
  "type": "module",
  "files": [
    "client.*",
    "index.*",
    "utils.*",
    "types.*",
    "vite.*",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.js"
    },
    "./client": {
      "types": "./client.d.ts",
      "solid": "./client.js",
      "import": "./client.js"
    },
    "./types": "./types.d.ts",
    "./utils": {
      "types": "./utils.d.ts",
      "import": "./utils.js"
    },
    "./vite": {
      "types": "./vite.d.ts",
      "import": "./vite.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "devDependencies": {
    "@auth/core": "^0.10.0",
    "@types/node": "^18.7.14",
    "@typescript-eslint/parser": "^5.44.0",
    "solid-js": "^1.5.3",
    "typescript": "^4.8.2",
    "solid-start": "^0.2.0",
    "@types/babel__core": "^7.20.0"
  },
  "dependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-typescript": "^7.18.6",
    "@rollup/pluginutils": "^5.0.2"
  },
  "peerDependencies": {
    "solid-js": "^1.5.3",
    "solid-start": "^0.2.0",
    "@auth/core": "^0.10.0"
  },
  "engines": {
    "node": ">=16"
  }
}
